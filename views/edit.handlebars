<div class="row mt-3">
  <div class="col-4" style="margin: 0 auto;">
    <div class="row">
      <div class="col-2" style="text-align: right;">
        <small>*必田欄位</small>
      </div>
      <div class="col-8">
        <h2 style="text-align: center;">請輸入你的支出</h2>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabel" class="title col-sm-2 col-form-label">名稱*:</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="name" name="name" value="{{records.name}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabel" class="title col-sm-2 col-form-label">日期*:</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="date" name="date" placeholder="西元年-月-日" value="{{records.date}}">
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabel" class="title col-sm-2 col-form-label">類別*:</label>
      <div class="col-sm-8">
        <select class="form-control" name="category">
          <option value="家居物業" {{#ifEquals records.category '家居物業' }}selected{{/ifEquals}}>家居物業</option>
          <option value="交通出行" {{#ifEquals records.category '交通出行' }}selected{{/ifEquals}}>交通出行</option>
          <option value="休閒娛樂" {{#ifEquals records.category '休閒娛樂' }}selected{{/ifEquals}}>休閒娛樂</option>
          <option value="餐飲食品" {{#ifEquals records.category '餐飲食品' }}selected{{/ifEquals}}>餐飲食品</option>
          <option value="其他" {{#ifEquals records.category '其他' }}selected{{/ifEquals}}>其他</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabel" class="title col-sm-2 col-form-label">金額*:</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="amount" name="amount" value="{{keyword.amount}}">
      </div>
    </div>
    <div class="row">
      <div class="col-12 d-flex justify-content-center" style="margin: 0 auto;">
        <form action="/new" method="POST">
          <button type="submit" class="btn-send btn-lg">送出</button>
        </form>
      </div>
    </div>
  </div>
</div>